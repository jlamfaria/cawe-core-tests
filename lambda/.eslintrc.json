{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "callback-return": "off",
      "complexity": [
        "error",
        {
          "max": 10
        }
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-unused-vars": "off",
      "no-unreachable": "error",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "typescript/no-unused-vars": "off",
      "typescript/interface-name-prefix": "off",
      "typescript/no-explicit-any": "off",
      "no-mixed-spaces-and-tabs": "error",
      "newline-before-return": "error",
      "newline-after-var": [
        "error",
        "always"
      ],
      "prefer-const": "error",
      "valid-typeof": "error",
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "spaced-comment": "off",
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "quote-props": [
        "warn",
        "consistent-as-needed"
      ],
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ]
    },
    "overrides": [
      {
        "files": ["*.yml"],
        "plugins": ["yaml"],
        "extends": ["plugin:yaml/recommended"],
        "rules": {
          "quotes": [
            2,
            "double",
            "avoid-escape"
          ]
        }
      }
    ]
  }
  